<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Style Selector="CheckBox /template/Border">
		<Setter Property="CornerRadius" Value="5" />
		<Setter Property="Margin" Value="2"/>
	</Style>
	<Style Selector="CheckBox:pointerover /template/Border">
		<Setter Property="BoxShadow" Value="{DynamicResource BoxShadowSmall}"/>
	</Style>
    <Style Selector="CheckBox">
        <Setter Property="Background" Value="{DynamicResource ThemeBorderLowBrush}" />
    </Style>
    <Style Selector="CheckBox:pointerover">
        <Setter Property="Background" Value="{DynamicResource ThemeBorderMidBrush}" />
    </Style>

</Styles>