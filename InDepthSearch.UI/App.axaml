<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:InDepthSearch.UI"
             x:Class="InDepthSearch.UI.App">
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

	<Application.Styles>
		<!-- Only for the designer -->
		<StyleInclude Source="avares://InDepthSearch.UI/Themes/Light.xaml"/>
	</Application.Styles>
	
	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceInclude Source='avares://InDepthSearch.UI/Assets/Resources/StringsENG.xaml'/>
				<ResourceInclude Source='avares://InDepthSearch.UI/Assets/Resources/Icons.xaml'/>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Application.Resources>
	
</Application>
